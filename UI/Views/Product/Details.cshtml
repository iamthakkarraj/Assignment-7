@model BLL.ViewModels.ProductModel

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="row ml-0">
        <h3>Product Details</h3>
        <a href="/Product/Edit/@Model.ProductId"
           class="btn btn-primary rounded-0 shadow shadow ml-2">
            <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <a href="/Product/Delete/@Model.ProductId"
           class="btn btn-danger rounded-0 shadow shadow ml-2">
            <i class="fa fa-trash" aria-hidden="true"></i>
        </a>
        <a href="/Product/Details/@Model.ProductId"
           class="btn btn-success rounded-0 shadow shadow ml-2">
            <i class="fa fa-address-card" aria-hidden="true"></i>
        </a>
    </div>    
    <hr class="bg-primary" />
    <div class="col-12">
        <div class="col-4">
            <div class="row">
                <img class="rounded shadow" src="~/Uploads/@Model.ImagePath.Trim()" alt="@Model.Name" style="max-height:100px;max-width:100px" />
                <dl class="px-3">
                    <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd>@Html.DisplayFor(model => model.Price)</dd>
                </dl>
                <dl>
                    <dt>Status</dt>
                    <dd>
                        @if (Model.Status ?? false) {
                            <span class="col-12 bg-success text-light badge rounded-0 shadow">
                                In Stock
                            </span>
                        } else {
                            <span class="bg-danger col-12 badge text-light rounded-0 shadow">
                                Out Of Stock
                            </span>
                        }
                    </dd>
                    <dt>@Html.DisplayNameFor(model => model.Discount)</dt>
                    <dd>@Html.DisplayFor(model => model.Discount)</dd>
                </dl>
            </div>
            <div class="row">
                <dl class="pr-3">
                    <dt>@Html.DisplayNameFor(model => model.ProductId)</dt>
                    <dd>@Html.DisplayFor(model => model.ProductId)</dd>
                    <dt>@Html.DisplayNameFor(model => model.CategoryId)</dt>
                    <dd>@Html.DisplayFor(model => model.CategoryId)</dd>
                </dl>
                <dl>
                    <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Code)</dt>
                    <dd>@Html.DisplayFor(model => model.Code)</dd>
                </dl>
            </div>
        </div>
    </div>
    <dl class="col-6">
        <dt>@Html.DisplayNameFor(model => model.CreatedBy)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedBy)</dd>
        <dt>@Html.DisplayNameFor(model => model.CreatedDate)</dt>
        <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>
        <dt>@Html.DisplayNameFor(model => model.ModifiedDate)</dt>
        <dd>@Html.DisplayFor(model => model.ModifiedDate)</dd>
    </dl>
</div>

